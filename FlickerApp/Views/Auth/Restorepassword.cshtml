@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mx-auto mt-4 p-4">
    <div class="max-w-md mx-auto">
        <h2 class="text-3xl font-semibold text-gray-700 mb-4">Forgot Password <i class="fas fa-key mr-2"></i></h2>
        <br />
        <form class="bg-gray-800 p-4 rounded-md space-y-4">
            <div class="mb-4">
                <input type="email" id="email" name="email" class="w-full h-10 px-4 text-white bg-gray-700 border rounded-lg border-gray-500 focus:outline-none" placeholder="Enter your email" required>
            </div>
            <div class="flex justify-between">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-lg focus:outline-none">
                    Send
                </button>
                <a asp-controller="Auth" asp-action="Login" class="bg-gray-600 hover:bg-gray-700 text-white py-2 px-4 rounded-lg focus:outline-none">
                    Back
                </a>
            </div>
        </form>
    </div>
</div>
